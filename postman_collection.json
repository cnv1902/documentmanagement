{
  "info": {
    "name": "CloudBOX Document Management API",
    "description": "API Collection for CloudBOX Document Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\",\n    \"password_confirmation\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/register",
              "host": ["{{base_url}}"],
              "path": ["register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.access_token) {",
                  "    pm.collectionVariables.set(\"token\", jsonData.data.access_token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/login",
              "host": ["{{base_url}}"],
              "path": ["login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/me",
              "host": ["{{base_url}}"],
              "path": ["me"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/logout",
              "host": ["{{base_url}}"],
              "path": ["logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Files",
      "item": [
        {
          "name": "List Files",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/files?per_page=20&sort_by=created_at&sort_order=desc",
              "host": ["{{base_url}}"],
              "path": ["files"],
              "query": [
                {
                  "key": "folder_id",
                  "value": "1",
                  "disabled": true
                },
                {
                  "key": "search",
                  "value": "document",
                  "disabled": true
                },
                {
                  "key": "per_page",
                  "value": "20"
                },
                {
                  "key": "sort_by",
                  "value": "created_at"
                },
                {
                  "key": "sort_order",
                  "value": "desc"
                }
              ]
            }
          }
        },
        {
          "name": "Upload File",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": ""
                },
                {
                  "key": "folder_id",
                  "value": "1",
                  "type": "text",
                  "disabled": true
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/files",
              "host": ["{{base_url}}"],
              "path": ["files"]
            }
          }
        },
        {
          "name": "Get File",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/files/1",
              "host": ["{{base_url}}"],
              "path": ["files", "1"]
            }
          }
        },
        {
          "name": "Update File",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Updated Name.pdf\",\n    \"folder_id\": 2,\n    \"is_favourite\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/files/1",
              "host": ["{{base_url}}"],
              "path": ["files", "1"]
            }
          }
        },
        {
          "name": "Delete File",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/files/1",
              "host": ["{{base_url}}"],
              "path": ["files", "1"]
            }
          }
        },
        {
          "name": "Get Favourite Files",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/files/favourites/list",
              "host": ["{{base_url}}"],
              "path": ["files", "favourites", "list"]
            }
          }
        },
        {
          "name": "Get Recent Files",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/files/recent/list",
              "host": ["{{base_url}}"],
              "path": ["files", "recent", "list"]
            }
          }
        },
        {
          "name": "Get Trash",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/files/trash/list",
              "host": ["{{base_url}}"],
              "path": ["files", "trash", "list"]
            }
          }
        },
        {
          "name": "Restore File",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/files/1/restore",
              "host": ["{{base_url}}"],
              "path": ["files", "1", "restore"]
            }
          }
        },
        {
          "name": "Force Delete File",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/files/1/force",
              "host": ["{{base_url}}"],
              "path": ["files", "1", "force"]
            }
          }
        }
      ]
    },
    {
      "name": "Folders",
      "item": [
        {
          "name": "List Folders",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/folders?parent_id=null",
              "host": ["{{base_url}}"],
              "path": ["folders"],
              "query": [
                {
                  "key": "parent_id",
                  "value": "null"
                }
              ]
            }
          }
        },
        {
          "name": "Create Folder",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"My Documents\",\n    \"parent_id\": null\n}"
            },
            "url": {
              "raw": "{{base_url}}/folders",
              "host": ["{{base_url}}"],
              "path": ["folders"]
            }
          }
        },
        {
          "name": "Get Folder",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/folders/1",
              "host": ["{{base_url}}"],
              "path": ["folders", "1"]
            }
          }
        },
        {
          "name": "Update Folder",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Updated Folder Name\",\n    \"parent_id\": 2\n}"
            },
            "url": {
              "raw": "{{base_url}}/folders/1",
              "host": ["{{base_url}}"],
              "path": ["folders", "1"]
            }
          }
        },
        {
          "name": "Delete Folder",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/folders/1",
              "host": ["{{base_url}}"],
              "path": ["folders", "1"]
            }
          }
        },
        {
          "name": "Get Folder Tree",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/folders/tree/all",
              "host": ["{{base_url}}"],
              "path": ["folders", "tree", "all"]
            }
          }
        }
      ]
    }
  ]
}
